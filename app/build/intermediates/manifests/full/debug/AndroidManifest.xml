            android:theme="@style/FullscreenTheme" />
        <activity
            android:name="com.example.bmairtoek.myapplication.Host_room"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_host_room"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name="com.example.bmairtoek.myapplication.Client_room"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_client_room"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name="com.example.bmairtoek.myapplication.Multi_Grid"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_multi__grid"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>