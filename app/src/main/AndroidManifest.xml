<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bmairtoek.myapplication">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_new"
        android:label="Statki"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".StartingActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".EnemyTurn"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_enemy_turn"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".Host_room"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_host_room"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".Client_room"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_client_room"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme"/>
        <activity
            android:name=".Multi_Grid"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_multi__grid"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme"/>
    </application>

</manifest>